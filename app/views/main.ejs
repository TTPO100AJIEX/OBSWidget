<!DOCTYPE html>
<html lang='ru'>
    <head>
        <link rel="stylesheet" href="/static/css/main.css" nonce="<%=cspNonce.style%>">
        <script src="/static/js/main.js" nonce="<%=cspNonce.script%>" type="module"></script>
        <%- include("general/head.ejs", { style: "dark" }) %>
    </head>
    <body>
        <h1>ZLOYN BONUS BUY</h1>
        <main tabindex="-1">
            <form id="login_form" method="POST" action="/login">
                <input type="hidden" name="authentication" value="<%=req.authentication_code%>">
                <h2>Authorization</h2>
                <label>
                    Login:
                    <input type="text" name="login" placeholder="Enter login" required>
                </label>
                <label>
                    Password:
                    <input type="password" name="password" placeholder="Enter password" required>
                </label>
                <button>Login to account</button>
                <hr>
                <footer>Prod by Fyx1k & Dolix</footer>
            </form>
        </main>
    </body>
</html>